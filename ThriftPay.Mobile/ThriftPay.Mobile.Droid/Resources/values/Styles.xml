<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="ThriftPayTheme" parent="ThriftPayTheme.Base">
    <item name="android:windowContentTransitions">true</item>
    <item name="android:buttonStyle">@style/Button</item>
  </style>
  <style name="ThriftPayTheme.NoActionBar" parent="ThriftPayTheme.Base.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="android:windowContentTransitions">true</item>
    <item name="android:buttonStyle">@style/Button</item>
  </style>
  <style name="ThriftPayTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/window_background</item>
  </style>
  <style name="ThriftPayTheme.Base.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/window_background</item>
  </style>
  <style name="ThriftPayTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="android:windowBackground">@drawable/background_splash</item>
  </style>
  <style name="Button" parent="Widget.AppCompat.Button">
    <item name="android:textAllCaps">false</item>
  </style>
</resources>